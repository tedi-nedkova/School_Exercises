@model IEnumerable<EmployeeDepartment.Data.Entities.Employee>
@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Add Employee</a>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Date of Birth</th>
            <th>Department</th>
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Name</td>
                <td>@e.Email</td>
                <td>@e.Salary</td>
                <td>@e.DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td>@e.Department?.Name</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@e.Id">Edit</a>

                    <form asp-action="Delete" asp-route-id="@e.Id" method="post" class="d-inline">
                        <button class="btn btn-sm btn-danger"
                                onclick="return confirm('Delete employee?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
